@model Gallaria.WEB.ViewModels.AccountViewModel;

@{
    ViewData["Title"] = "Create account";
}

<h1>Create account</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">First name</label>
                <input asp-for="Person.FirstName" class="form-control" required />
                <span asp-validation-for="Person.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Last name</label>
                <input asp-for="Person.LastName" class="form-control" required />
                <span asp-validation-for="Person.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input asp-for="Person.Email" class="form-control" type="email" required />
                <span asp-validation-for="Person.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input asp-for="Person.HashPassword" class="form-control" type="password" id="password" required />
                <span asp-validation-for="Person.HashPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" onclick="showPassword()" /> Show password
            </div>
            <div class="form-group">
                <label class="control-label">Confirm password</label>
                <input asp-for="Person.ConfirmPassword" class="form-control" type="password" id="confirmPassword" required />
                <span asp-validation-for="Person.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" onclick="showConfirmPassword()" /> Show password
            </div>
            <div class="form-group">
                <label class="control-label">Phone number</label>
                <input asp-for="Person.PhoneNumber" class="form-control" required />
                <span asp-validation-for="Person.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Street</label>
                <input asp-for="Person.Address.Street" class="form-control" required />
                <span asp-validation-for="Person.Address.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">House number</label>
                <input asp-for="Person.Address.HouseNumber" class="form-control" required />
                <span asp-validation-for="Person.Address.HouseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Zipcode</label>
                <input asp-for="Person.Address.Zipcode" class="form-control" required />
                <span asp-validation-for="Person.Address.Zipcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">City</label>
                <input asp-for="Person.Address.City" class="form-control" required />
                <span asp-validation-for="Person.Address.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Country</label>
                <input asp-for="Person.Address.Country" class="form-control" required />
                <span asp-validation-for="Person.Address.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" asp-for="isPersonArtist" id="wantToBeArtist" onclick="showProfileDescription()"/> I want to become artist.
            </div>
            <div class="form-group"  id="profileDescription" style="display: none;" >
                <label for="artistDescription">Profile description:</label>
                <textarea asp-for="Artist.ProfileDescription" id="textAreaProfileDescription" rows="6" cols="40" disabled="disabled" required >
                </textarea>
            </div>              
            <div class="form-group">
                <input type="submit" value="Create account" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to front page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
