<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card-group mb-0">
                <div class="card p-4">
                    <div class="card-body">
                        <h1>Login</h1>
                        <p class="text-muted">Sign In to your account</p>
                        <form method="post">
                            <div class="input-group mb-3">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                <input asp-for="Email" type="text" class="form-control" placeholder="Email" required>
                            </div>
                            <div class="input-group mb-4">
                                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <button type="submit" value="Login" class="btn btn-primary px-4">Login</button>
                                </div>
                                @*<div class="col-6 text-right">
                                    <button type="button" class="btn btn-link px-0">Forgot password?</button>
                                </div>*@
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                    <div class="card-body text-center">
                        <div>
                            <h2>Sign up</h2>
                            <p>Are you new on our website? Would you like to buy any interesting art ? If you don't have account yet</p>
                            <button type="button" onclick="location.href='@Url.Action("CreateAccount","Accounts")'" class="btn btn-primary active mt-3">Sign up now!</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

