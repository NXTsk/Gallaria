@model IEnumerable<Gallaria.ApiClient.DTOs.ArtDto>
@{
    ViewData["Title"] = "Home Page";
}

<head>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/index.css" rel="stylesheet" />

</head>
<body class="d-flex flex-column">
    <main class="flex-shrink-0">
        <!-- Header-->
        <header class="bg-primary py-5">
            <div class="container px-5">
                <div class="row gx-5 align-items-center justify-content-center">
                    <div class="col-lg-8 col-xl-7 col-xxl-6">
                        <div class="my-5 text-center text-xl-start">
                            <img class="img-fluid" src="~/Images/Full_Logo_White.png" alt="Gallaria.png" />
                            <p class="lead fw-normal text-white-50 mb-4">Become an artist on Gallaria. Use our dedicated app to create and upload your artwork!<br />(To use it you have to <a class="text-white-50" href="@Url.Action("CreateAccount","Accounts")">sign up</a> as artist.)</p>
                            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center justify-content-xl-start">
                                <button type="button" class="btn btn-dark btn-lg px-4 me-sm-3" data-toggle="modal" data-target="#featureNotImplemented">
                                    Download app
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-5 col-xxl-6 d-xl-block text-center"><img class="img-fluid rounded-3 my-5" src="~/Images/DrawingApp.png" alt="..." /></div>
                </div>
            </div>
        </header>



        <!-- Features section-->
        <section class="py-5" id="features">

            <div class="bg-primary container px-5">
                <div class="row gx-5 align-items-center justify-content-center">
                    <div class="col-12 justify-content-center text-center h-75">
                        @foreach (var item in Model)
                        {
                            <img class="img-fluid rounded-3 my-5 w-25" src="@Html.DisplayFor(modelItem => item.Img64)" runat="server" alt="Sample art.png" />
                        }
                    </div>
                    <div class="col-lg-8 col-xl-7 col-xxl-6 h-25">
                        <div class="my-5 text-center">
                            <p class="lead fw-normal text-white-50 mb-4">Support starting artists!</p>
                            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                                <a class="btn btn-dark btn-lg px-4 me-sm-3" asp-area="" asp-controller="Art" asp-action="AllArts">Browse all arts</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container px-5 my-5">
                <div class="row gx-5">
                    <div class="col-lg-4 mb-5 mb-lg-0"><h2 class="fw-bolder mb-0">New era of art.</h2></div>
                    <div class="col-lg-8">
                        <div class="row gx-5 row-cols-1 row-cols-md-2">
                            <div class="col mb-5 h-100">
                                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-brush"></i></div>
                                <h2 class="h5">Become an artist!</h2>
                                <p class="mb-0">Be seen on our market of various digital artpieces</p>
                            </div>
                            <div class="col mb-5 h-100">
                                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-currency-euro"></i></div>
                                <h2 class="h5">Support artist</h2>
                                <p class="mb-0">Browse the marketplace and support starting artist by buying their art</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Testimonial section-->
            <div class="py-5 bg-light">
                <div class="container px-5 my-5">
                    <div class="row gx-5 justify-content-center">
                        <div class="col-lg-10 col-xl-7">
                            <div class="text-center">
                                <div class="fs-4 mb-4 fst-italic">"Art is my passion and I love supporting young digital artists. Gallaria is a great project!"</div>
                                <div class="d-flex align-items-center justify-content-center">
                                    <img class="rounded-circle me-3 img-fluid" src="~/Images/ZayanSquare.jpg" alt="..." style="height: 50px" />
                                    <div class="fw-bold">
                                        Zayan Davis
                                        <span class="fw-bold text-primary mx-1">/</span>
                                        Art enthusiast
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container px-5 my-5">
                <div class="text-center">
                    <h2 class="fw-bolder">Our team</h2>
                    <p class="lead fw-normal text-muted mb-5">Founders of Gallaria</p>
                </div>
                <div class="row gx-5 row-cols-1 row-cols-sm-2 row-cols-xl-4 justify-content-center">
                    <div class="col mb-2 mb-xl-0">
                        <div class="text-center">
                            <img class="img-fluid rounded-circle mb-4 px-4" src="~/Images/Adam.jpg" alt="..." style="width: 200px" />
                            <h5 class="fw-bolder">Adam Galla</h5>
                        </div>
                    </div>
                    <div class="col mb-2 mb-xl-0">
                        <div class="text-center">
                            <img class="img-fluid rounded-circle mb-4 px-4" src="~/Images/Dan.jpg" alt="..." style="width: 200px" />
                            <h5 class="fw-bolder">Dan Vyhlidal</h5>
                        </div>
                    </div>
                    <div class="col mb-2 mb-sm-0">
                        <div class="text-center">
                            <img class="img-fluid rounded-circle mb-4 px-4" src="~/Images/Denisa.jpg" alt="..." style="width: 200px" />
                            <h5 class="fw-bolder">Denisa Gabriela Neagu</h5>
                        </div>
                    </div>
                    <div class="col mb-2">
                        <div class="text-center">
                            <img class="img-fluid rounded-circle mb-4 px-4" src="~/Images/Mato.jpg" alt="..." style="width: 200px" />
                            <h5 class="fw-bolder">Matej Horvath</h5>
                        </div>
                    </div>
                    <div class="col mb-2">
                        <div class="text-center">
                            <img class="img-fluid rounded-circle mb-4 px-4" src="~/Images/Tomas.jpg" alt="..." style="width: 200px" />
                            <h5 class="fw-bolder">Tomas Chmelik</h5>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <!-- Footer-->
    <footer class="bg-dark py-4 mt-auto full-width" style="margin-bottom: -1.5%">
        <div class="container px-5">
            <div class="row align-items-center justify-content-between flex-column flex-sm-row">
                <div class="col-auto"><div class="small m-0 text-white">Copyright &copy; Gallaria 2021</div></div>
                <div class="col-auto">
                    @*<a class="link-light small" href="#!">Privacy</a>
                        <span class="text-white mx-1">&middot;</span>
                        <a class="link-light small" href="#!">Terms</a>
                        <span class="text-white mx-1">&middot;</span>
                        <a class="link-light small" href="#!">Contact</a>*@
                </div>
            </div>
        </div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>

</body>

<div class="modal fade" id="featureNotImplemented" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Feature error</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                This feature is not implemented yet!
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

