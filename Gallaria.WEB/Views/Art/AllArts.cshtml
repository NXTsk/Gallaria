@model IEnumerable<Gallaria.ApiClient.DTOs.ArtDto>

@{
    ViewData["Title"] = "AllArts";
}


<h1>All Arts</h1>


    <div class="row">
        @foreach (var item in Model)
        {
        <div class="col-md-4 col-sm-6 col-lg-3">
            <a href="@Url.Action("Details", "Art", new { id=item.Id })">
                <div class="card">
                    <img src="@Html.DisplayFor(modelItem => item.Image)" runat="server" class="card-img-top" alt="Picture">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <div class="d-flex justify-content-between">
                            <div class="card-text">Author:</div>
                            <div class="card-text"></div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="card-text">Price:</div>
                            <div class="card-text">@Html.DisplayFor(modelItem => item.Price)€</div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="card-text">Available pieces:</div>
                            <div class="card-text">@Html.DisplayFor(modelItem => item.AvailableQuantity)</div>
                        </div>
                        <div class="row justify-content-center"><a href="#" class="btn btn-primary align">Add to cart</a></div>
                    </div>
                </div>
            </a>
        </div>
        }
    </div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuthorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <div class="image">
                        <dl>
                            <dd class="col-sm-10">
                                <img src=" @Html.DisplayFor(modelItem => item.Image)" runat="server" alt="picture" style="max-width: 70%; flex-basis: 40%">
                            </dd>
                        </dl>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })

                    @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ })
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                </td>
            </tr>
        }
    </tbody>
</table>